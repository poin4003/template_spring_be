<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.template.app.features.actionRule.repository.ActionRuleRepository">

    <resultMap id="BaseResultMap" type="com.template.app.features.actionRule.entity.ActionRuleEntity">
        <id column="id" property="id" />
        
        <result column="target_id" property="targetId" />
        <result column="error_code" property="errorCode" />
        
        <result column="created_at" property="createdAt" />
        <result column="updated_at" property="updatedAt" />
    </resultMap>

    <select id="findMatchedRuleByCode" resultMap="BaseResultMap">
        SELECT * FROM action_rule
        WHERE target_id = #{targetId}
          AND error_code = #{errorCode}
        LIMIT 1
    </select>

</mapper>